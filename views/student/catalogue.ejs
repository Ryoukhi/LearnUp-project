<%- include("../partials/dashboard_student.ejs") %>
<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

<div class="container mx-auto p-4 sm:p-6">
  <!-- Advertisement Section -->
  <div class="relative bg-gradient-to-r from-orange-500 to-yellow-400 text-white rounded-xl shadow-lg p-0 mb-8 max-w-screen-lg mx-auto overflow-hidden">
    <!-- Swiper Carousel -->
    <div class="swiper mySwiper rounded-xl w-full max-w-full overflow-hidden">
      <div class="swiper-wrapper">
        <!-- Slide 1 -->
        <div class="swiper-slide">
          <div class="relative w-full aspect-[16/9]">
            <img src="/images/caroussel1.jpg" class="w-full h-full object-cover brightness-75" alt="Slide 1">
            <div class="absolute inset-0 flex flex-col justify-center items-center text-center px-6">
              <h2 class="text-2xl md:text-4xl font-extrabold drop-shadow-lg">Apprenez Aujourd'hui, Réussissez Demain</h2>
              <p class="text-sm md:text-lg mt-4 drop-shadow-md">Rejoignez nos formations et transformez votre avenir avec LearnUp.</p>
            </div>
          </div>
        </div>
        <!-- Slide 2 -->
        <div class="swiper-slide">
          <div class="relative w-full aspect-[16/9]">
            <img src="/images/caroussel2.png" class="w-full h-full object-cover brightness-75" alt="Slide 2">
            <div class="absolute inset-0 flex flex-col justify-center items-center text-center px-6">
              <h2 class="text-2xl md:text-4xl font-extrabold drop-shadow-lg">Développez Vos Compétences</h2>
              <p class="text-sm md:text-lg mt-4 drop-shadow-md">Apprenez avec des formateurs expérimentés et passionnés.</p>
            </div>
          </div>
        </div>
        <!-- Slide 3 -->
        <div class="swiper-slide">
          <div class="relative w-full aspect-[16/9]">
            <img src="/images/caroussel3.png" class="w-full h-full object-cover brightness-75" alt="Slide 3">
            <div class="absolute inset-0 flex flex-col justify-center items-center text-center px-6">
              <h2 class="text-2xl md:text-4xl font-extrabold drop-shadow-lg">Inscrivez-vous maintenant</h2>
              <p class="text-sm md:text-lg mt-4 drop-shadow-md">Participez à des formations de qualité supérieure et enrichissantes.</p>
            </div>
          </div>
        </div>
        <!-- Slide 4 -->
        <div class="swiper-slide">
          <div class="relative w-full aspect-[16/9]">
            <img src="/images/caroussel4.jpg" class="w-full h-full object-cover brightness-75" alt="Slide 4">
            <div class="absolute inset-0 flex flex-col justify-center items-center text-center px-6">
              <h2 class="text-2xl md:text-4xl font-extrabold drop-shadow-lg">Cours 100% en Direct</h2>
              <p class="text-sm md:text-lg mt-4 drop-shadow-md">Suivez des experts en direct et interactifs.</p>
            </div>
          </div>
        </div>
      </div>
      <!-- Swiper Navigation -->
      <div class="swiper-button-next text-white"></div>
      <div class="swiper-button-prev text-white"></div>
      <div class="swiper-pagination"></div>
    </div>
  </div>

  <!-- Available Sessions Section -->
  <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-8 text-center">Sessions de Formations Disponibles</h2>

  <% if (sessions && sessions.length > 0) { %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <% sessions.forEach(session => { %>
        <% if (session.etat === 'ouverte') { %>
          <div class="bg-white shadow-xl rounded-xl overflow-hidden hover:shadow-2xl hover:scale-105 transition-transform duration-300">
            <img src="<%= session.image || '/images/ui.jpg' %>" alt="Session Image" class="w-full h-44 object-cover">
            <div class="p-5">
              <h3 class="text-lg md:text-xl font-semibold text-gray-900 mb-3"><%= session.titre %></h3>
              <p class="text-sm text-gray-700 mb-4 line-clamp-3"><%= session.description.replace(/(<([^>]+)>)/gi, "").substring(0, 200) %>...</p>
              <div class="text-sm text-gray-600 mb-4">
                <p><strong>Date de Début :</strong> <%= session.dateDebut.toLocaleDateString() %></p>
                <p><strong>Date de Fin :</strong> <%= session.dateFin.toLocaleDateString() %></p>
                <p><strong>Prix :</strong> <span class="text-green-600 font-bold text-lg"><%= session.montant %> FCFA</span></p>
              </div>
              <a href="/catalogue/<%= encodeURIComponent(session.id) %>" class="block text-center bg-orange-600 text-white hover:bg-orange-500 font-medium py-3 px-5 rounded-lg transition-all text-sm md:text-base shadow-md hover:shadow-lg">
                Voir Plus
              </a>
            </div>
          </div>
        <% } %>
      <% }) %>
    </div>
  <% } else { %>
    <p class="text-gray-600 text-center text-sm md:text-base">Aucune session de formation disponible pour le moment. Nous vous tiendrons au courant des nouvelles sessions de formations.</p>
  <% } %>
</div>

<!-- Swiper Script -->
<script>
  const swiper = new Swiper('.mySwiper', {
    loop: true,
    autoplay: {
      delay: 4000,
      disableOnInteraction: false,
    },
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },
  });
</script>

<%- include("../partials/footer-dash.ejs") %>

<!-- SweetAlert2 CDN -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<main id="main-content" class="flex-1 bg-gray-100 p-8 transition-all duration-300">


  <!-- Toast Notifications -->

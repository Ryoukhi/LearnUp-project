<%- include("../partials/dashboard_student.ejs") %>

<div class="container mx-auto p-6 animate-fade-in">
  <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
    <!-- Left Sidebar: Call-to-Action -->
    <div class="bg-orange-100 shadow-xl rounded-xl p-6 lg:col-span-1 transform hover:scale-105 transition-transform duration-300 ease-in-out">
      <h3 class="text-xl font-bold text-gray-800 mb-4">Action Requise</h3>
      <p class="text-gray-600 mb-4">
        Inscrivez-vous maintenant et réservez votre place pour cette formation.
      </p>
      <a href="/student/payement/<%= session.id %>" class="block bg-green-500 hover:bg-green-600 text-white font-semibold text-center py-3 px-4 rounded-lg shadow-lg transition-all duration-300 hover:shadow-xl">
        Payer Maintenant
      </a>
    </div>

    <!-- Main Content: Session Details -->
    <div class="bg-white shadow-xl rounded-xl p-6 lg:col-span-3 transform hover:scale-105 transition-transform duration-300 ease-in-out">
      <h2 class="text-3xl font-bold text-gray-800 mb-6 border-b-2 pb-2 border-gray-300"> <%= session.titre %></h2>
      <div class="space-y-4">
        <p class="text-lg font-semibold text-gray-700">Description :</p>
        <div class="prose max-w-none text-gray-600 leading-relaxed bg-gray-50 p-4 rounded-lg shadow-inner">
          <%- session.description %>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <p class="text-lg"><strong class="font-semibold text-gray-700">Date de Début :</strong> <%= session.dateDebut.toLocaleDateString() %></p>
          <p class="text-lg"><strong class="font-semibold text-gray-700">Date de Fin :</strong> <%= session.dateFin.toLocaleDateString() %></p>
          <p class="text-lg"><strong class="font-semibold text-gray-700">Prix :</strong> <span class="text-green-600 font-bold text-lg"><%= session.montant %> FCFA</span></p>
          <p class="text-lg"><strong class="font-semibold text-gray-700">Formateur :</strong> <%= session.formateur.nom %> <%= session.formateur.prenom %></p>
          <p class="text-lg"><strong class="font-semibold text-gray-700">Contact :</strong> <%= session.formateur.telephone %>, <%= session.formateur.email %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes fade-in {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-in {
    animation: fade-in 0.5s ease-out;
  }
</style>


<%- include("../partials/dashboard_student.ejs") %>

<div class="container mx-auto p-4 sm:p-6">
  <h1 class="text-2xl md:text-3xl font-bold text-gray-900 mb-8">Mes Sessions de Formation</h1>


      <!-- Toast Notifications -->
<div id="toast-container" class="fixed top-5 right-5 z-50 space-y-4">
  <% if (success && success.length > 0) { %>
    <div class="toast bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded shadow-md">
      <strong class="font-bold">Succès:</strong>
      <span class="block sm:inline"><%= success %></span>
    </div>
  <% } %>

  <% if (error && error.length > 0) { %>
    <div class="toast bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded shadow-md">
      <strong class="font-bold">Erreur:</strong>
      <span class="block sm:inline"><%= error %></span>
    </div>
  <% } %>
</div>


  <% if (sessions && sessions.length > 0) { %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% sessions.forEach(session => { %>
        <div class="bg-white shadow-xl rounded-xl overflow-hidden hover:shadow-2xl hover:scale-105 transition-transform duration-300">
          <img src="<%= session.image || '/images/ui.jpg' %>" alt="Session Image" class="w-full h-48 object-cover">
          
          <div class="p-5">
            <h3 class="text-lg font-semibold text-gray-900 mb-2"><%= session.titre %></h3>
            
            <div class="text-sm text-gray-600 mb-4">
              <p class="mb-1"><strong>Date de début:</strong> <%= session.dateDebut.toLocaleDateString() %></p>
              <p class="mb-1"><strong>Date de fin:</strong> <%= session.dateFin.toLocaleDateString() %></p>
              <p class="mb-1"><strong>Statut:</strong> <span class="text-green-600">Active</span></p>
            </div>

            <a href="/mes-sessions/details/<%= session.id %>" 
               class="block text-center bg-orange-600 hover:bg-orange-500 text-white font-medium py-2 px-4 rounded transition-colors">
              Voir plus
            </a>
          </div>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <div class="bg-white rounded-xl shadow p-6 text-center">
      <p class="text-gray-600">Vous n'avez aucune session active pour le moment.</p>
      <a href="/catalogue" class="inline-block mt-4 text-blue-600 hover:text-blue-800">
        Parcourir les formations disponibles
      </a>
    </div>
  <% } %>
</div>

<%- include("../partials/footer-dash.ejs") %>


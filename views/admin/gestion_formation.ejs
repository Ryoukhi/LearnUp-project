    </a>
  </div>

  <!-- Toast Notifications -->
<!-- Toast Notifications -->
<div id="toast-container" class="fixed top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 z-50 space-y-4">
  <% if (success && success.length > 0) { %>
    <div class="toast bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded shadow-md">
      <strong class="font-bold">SuccÃ¨s:</strong>
      <span class="block sm:inline"><%= success %></span>
    </div>
  <% } %>

  <% if (error && error.length > 0) { %>
    <div class="toast bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded shadow-md">
      <strong class="font-bold">Erreur:</strong>
      <span class="block sm:inline"><%= error %></span>
    </div>
  <% } %>
  </div>


  <!-- List of Formations -->
  <% if (formations && formations.length > 0) { %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% formations.forEach(formation => { %>
        <div class="bg-white shadow-lg rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 flex flex-col h-full transform hover:scale-105">
          <div class="p-6 flex-grow">
            <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= formation.titre %></h3>
            
            <div class="text-sm text-gray-600 mb-4">
              <p><strong>Date de DÃ©but :</strong> <%= formation.dateDebut.toLocaleDateString() %></p>
              <p><strong>Date de Fin :</strong> <%= formation.dateFin.toLocaleDateString() %></p>
              <p><strong>Prix :</strong> <span class="text-green-600 font-bold"><%= formation.montant %> FCFA</span></p>
              <p><strong>Formateur :</strong> <%= formation.formateur.nom %> <%= formation.formateur.prenom %></p>
              <div><span class="font-medium text-gray-600">ðŸ“Œ Statut :</span> 
                <span class="inline-block px-2 py-1 rounded-full text-sm font-semibold 
                  <%= formation.status === 'en_cours' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' %>">
                  <%= formation.status %>
                </span>
              </div>
            </div>
          </div>
          <div class="p-4 bg-gray-100 flex justify-center items-center">
            <a href="/admin/gestion-formation/<%= encodeURIComponent(formation.id) %>" class="block text-center bg-orange-600 text-white hover:bg-orange-500 font-medium py-2 px-4 rounded-lg transition-all transform hover:scale-105 w-full">
              Voir les DÃ©tails
            </a>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
